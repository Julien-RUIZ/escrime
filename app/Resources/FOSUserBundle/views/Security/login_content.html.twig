{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div><p>erreur</p></div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

        <div><label for="username">{{ 'NOM'|trans }}</label></div>
        <div><input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" /></div>

        <div><label for="password">{{ 'security.login.password'|trans }}</label></div>
        <div><input type="password" id="password" name="_password" required="required" autocomplete="current-password" /></div>

        <div><input type="checkbox" id="remember_me" name="_remember_me" value="on" /></div>
        <div><label for="remember_me">{{ 'security.login.remember_me'|trans }}</label></div>

    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>

<button><a href="{{ path('homepage') }}">Retour page d'accueil</a></button>
