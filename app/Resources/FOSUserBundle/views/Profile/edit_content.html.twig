

<div class="container modif">
    <div class="titremiseajour">
        <h2>Mise a jour des informations principales</h2>
    </div>
    {% trans_default_domain 'FOSUserBundle' %}

    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}

    <div class="row">


        <div class="offset-md-3 col-md-2">{{ form_label(form.username) }}</div>
        <div class="col-md-7 mb-3">{{ form_widget(form.username) }}</div>


        <div class="offset-md-3 col-md-2">{{ form_label(form.email) }}</div>
        <div class="col-md-7 mb-3">{{ form_widget(form.email) }}</div>


        <div class="offset-md-3 col-md-2">{{ "Password actuel"}}</div>
        <div class="col-md-7 mb-3">{{ form_widget(form.current_password) }}</div>

        <div class="offset-3 offset-md-5 col-md-7 my-3"><input type="submit" value="{{ 'profile.edit.submit'|trans }}" /></div>

        <div>{{ form_errors(form.current_password) }}</div>
        <div>{{ form_errors(form.email) }}</div>
        <div>{{ form_errors(form.username) }}</div>
    </div>
        {{ form_end(form) }}

    <div class="row">
        <div class="offset-3 offset-md-5 col-md-7 mb-4">
        <a href="{{ path('homepage') }}"><button>Retour page d'accueil</button></a>
        </div>
    </div>
</div>