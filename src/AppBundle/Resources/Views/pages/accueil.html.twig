{% extends '@App/base/base.html.twig' %}



{% block content %}

<div class="container-fluid my-5 texte">
    <div class="container">
        <div>
            {% for actu in actus  %}
                <h2>{{ actu.titre }}</h2>
                <p>{{ actu.contenu }}</p>

                {% if actu.photo %}
                    <img src="{{ asset('uploads/images/' ~ actu.photo) }}" alt="image">
                {% else %}
                    <p>pas d'image</p>
                {% endif %}





                <hr>

            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}