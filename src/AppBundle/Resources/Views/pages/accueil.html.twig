{% block content %}
<section>
    <article>
        <div class="grandeimage">
            <img src="{{ asset('img/image-entete2.jpg') }}" alt="deux escrimeurs" class="imagedeuxSabreurs" width="100%">
        </div>
    </article>


    <article>
        <div class="container my-5 texte">
        <h2>Actualit√©s du club</h2>
        </div>
        <div>
