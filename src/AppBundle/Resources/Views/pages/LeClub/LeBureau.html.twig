{% extends '@App/base/base.html.twig' %}


{% block content %}
<article>
    <div class="container my-5 texte">
        <h2>Les membres du bureau</h2>
        <hr>
        {% for membre in membres %}
            <div class="container">
                <div>
                    {#cette condition va permettre de limiter au 6 premier id de la base de donn√©e de role#}
                    {% if membre.role.id<6 %}
                        <p class="Cat">{{ membre.role.role }} : {{ membre.nom }} </p>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</article>
{% endblock %}