{% extends '@App/base/baseAdmin.html.twig' %}




    {% block admin %}
<section>
    <header>
        <h4 class="titreListInfo">Formulaire pour mise a jour des informations </h4>
    </header>
    <article>
        <div class="container">
            <div class="d-flex ">
                <div class="offset-5 ">
